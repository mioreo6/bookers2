<div class="container px-5 px-sm-0">
<div class="row mx-auto">
<div>
<%= render 'books/list', book: @book, user: @user%>
</div>
<div class="col-md-8 offset-md-1">
<h2>Users</h2>

<table class="table">
    <thead>
     <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
     </tr>
    </thead>

    <tbody>
        <% @users.each do |user| %>
        <tr>
        <td><%= image_tag user.get_profile_image(100,100) %></td>
        <td><%= user.name %></td>
        <td><a href="show_user_path">show</a></td>
        </tr>
         <% end %>
    </tbody>


</table>
</div>
</div>
</div>