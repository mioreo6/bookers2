<div class="container px-5 px-sm-0">
<div class="row mx-auto">
<div>
<%= render 'books/list', book: @book %>
</div>
<div class="col-md-8 offset-md-1">
<h2>Books</h2>

<table class="table">
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
    </thead>
    <% @books.each do |book| %>
    <tbody>
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
    </tbody>

    <% end %>
</table>
</div>
</div>
</div>